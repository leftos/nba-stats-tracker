<Window x:Class="NBA_Stats_Tracker.Windows.AdvancedStatCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced Stats Calculator" Height="535" Width="859" Loaded="Window_Loaded_1">
    <TabControl x:Name="tbcAdv">
        <TabItem Header="Search">
            <Grid>
                <GroupBox Header="Step 1: Filter Players By" HorizontalAlignment="Left" Margin="10,10,0,0"
                          VerticalAlignment="Top" Height="166" Width="256">
                    <Grid>
                        <CheckBox Content="Active" Height="16" HorizontalAlignment="Left" Margin="10,41,0,0"
                                  x:Name="chkIsActive" VerticalAlignment="Top" IsThreeState="True" IsChecked="{x:Null}"
                                  Click="chkIsActive_Click" />
                        <ComboBox Height="23" HorizontalAlignment="Left" Margin="64,11,0,0" x:Name="cmbPosition1Filter"
                                  VerticalAlignment="Top" Width="50"
                                  SelectionChanged="cmbPosition1Filter_SelectionChanged" />
                        <Label Content="Position" HorizontalAlignment="Left" Margin="6,10,0,0" x:Name="label5"
                               VerticalAlignment="Top" />
                        <ComboBox Height="23" HorizontalAlignment="Left" Margin="179,10,0,0"
                                  x:Name="cmbPosition2Filter"
                                  VerticalAlignment="Top" Width="50"
                                  SelectionChanged="cmbPosition2Filter_SelectionChanged" />
                        <Label Content="2nd Pos" HorizontalAlignment="Left" Margin="122,10,0,0" x:Name="label6"
                               VerticalAlignment="Top" />
                        <ComboBox Height="23" HorizontalAlignment="Left" Margin="76,37,0,0" x:Name="cmbTeamFilter"
                                  VerticalAlignment="Top" Width="153" SelectionChanged="cmbTeamFilter_SelectionChanged" />
                        <ComboBox Height="23" HorizontalAlignment="Left" Margin="135,66,0,0" x:Name="cmbSeasonNum"
                                  VerticalAlignment="Top" Width="94" DisplayMemberPath="Value"
                                  SelectedValuePath="Key" SelectionChanged="cmbSeasonNum_SelectionChanged" />
                        <Label Content="Season" HorizontalAlignment="Left" Margin="84,66,0,0" x:Name="label17"
                               VerticalAlignment="Top" />

                    </Grid>
                </GroupBox>
                <GroupBox Header="Step 2: Select Player or Team" Margin="271,10,362,0" VerticalAlignment="Top"
                          Height="166">
                    <Grid>
                        <ComboBox x:Name="cmbSelectedPlayer" Margin="10,10,10,0" VerticalAlignment="Top"
                                  DisplayMemberPath="Value" SelectedValuePath="Key" ItemsSource="{Binding PlayersList}"
                                  SelectionChanged="cmbSelectedPlayer_SelectionChanged" />
                        <Label Content="or" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" />
                        <ComboBox x:Name="cmbSelectedTeam" Margin="10,68,10,0" VerticalAlignment="Top"
                                  SelectionChanged="cmbSelectedTeam_SelectionChanged" />
                    </Grid>
                </GroupBox>
                <GroupBox Header="Step 3: Set Timespan" HorizontalAlignment="Right" Margin="0,10,11,0"
                          VerticalAlignment="Top" Height="166" Width="346">
                    <Grid>
                        <RadioButton Content="All-Time - Season " Height="16" HorizontalAlignment="Left"
                                     Margin="10,14,0,0"
                                     x:Name="rbStatsAllTime" VerticalAlignment="Top" Checked="rbStatsAllTime_Checked" />
                        <RadioButton Content="Between*" Height="16" HorizontalAlignment="Left" Margin="10,36,0,0"
                                     x:Name="rbStatsBetween" VerticalAlignment="Top" Checked="rbStatsBetween_Checked" />
                        <DatePicker Height="25" HorizontalAlignment="Left" Margin="27,58,0,0" x:Name="dtpStart"
                                    VerticalAlignment="Top" Width="115"
                                    SelectedDateChanged="dtpStart_SelectedDateChanged" />
                        <DatePicker Height="25" HorizontalAlignment="Left" Margin="177,58,-73,0" x:Name="dtpEnd"
                                    VerticalAlignment="Top" Width="115"
                                    SelectedDateChanged="dtpEnd_SelectedDateChanged" />
                        <Label Content="and" HorizontalAlignment="Left" Margin="143,60,0,0" x:Name="label2"
                               VerticalAlignment="Top" />
                        <TextBlock Height="31" HorizontalAlignment="Left" Margin="10,98,-95,-31" x:Name="textBlock1"
                                   Text="* Availability of stats between dates depends on whether there are box-scores saved for this player."
                                   VerticalAlignment="Top" TextWrapping="Wrap" Width="304" />
                        <ComboBox Height="23" HorizontalAlignment="Left" Margin="125,10,0,0" x:Name="cmbTFSeason"
                                  VerticalAlignment="Top" Width="167" DisplayMemberPath="Value"
                                  SelectedValuePath="Key" SelectionChanged="cmbTFSeason_SelectionChanged" />
                    </Grid>
                </GroupBox>
                <GroupBox Header="Step 4: Set Stats Filters" HorizontalAlignment="Left" Margin="10,181,0,40"
                          Width="830">
                    <Grid>
                        <ComboBox Height="22" HorizontalAlignment="Left" Margin="56,10,0,0" x:Name="cmbTotalsPar"
                                  VerticalAlignment="Top" Width="63" />
                        <ComboBox Height="22" HorizontalAlignment="Left" Margin="124,10,0,0" x:Name="cmbTotalsOp"
                                  VerticalAlignment="Top" Width="41" />
                        <TextBox Height="22" HorizontalAlignment="Left" Margin="170,10,0,0" x:Name="txtTotalsVal"
                                 VerticalAlignment="Top" Width="67" />
                        <Button Content="Add" Height="22" Margin="0,10,90,0" x:Name="btnTotalsAdd"
                                VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"
                                Click="btnTotalsAdd_Click" />
                        <Button Content="Remove" Height="22" Margin="0,10,10,0" x:Name="btnTotalsDel"
                                VerticalAlignment="Top" HorizontalAlignment="Right" Width="75"
                                Click="btnTotalsDel_Click" />
                        <ListBox HorizontalAlignment="Stretch" Margin="10,39,10,10" x:Name="lstTotals"
                                 VerticalAlignment="Stretch" SelectionMode="Extended" />
                        <Label Content="Totals" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" />
                        <CheckBox x:Name="chkIsStarter" Content="Starter" HorizontalAlignment="Left"
                                  Margin="258,13,0,0" VerticalAlignment="Top" IsThreeState="True" IsChecked="{x:Null}" />
                        <CheckBox x:Name="chkIsInjured" Content="Injured" HorizontalAlignment="Left"
                                  Margin="315,13,0,0" VerticalAlignment="Top" IsThreeState="True" IsChecked="{x:Null}" />
                        <CheckBox x:Name="chkIsOut" Content="DNP" HorizontalAlignment="Left" Margin="374,13,0,0"
                                  VerticalAlignment="Top" IsThreeState="True" IsChecked="{x:Null}" />
                    </Grid>
                </GroupBox>
                <Button x:Name="btnSearch" Content="Search" Margin="0,0,10,10" VerticalAlignment="Bottom"
                        HorizontalAlignment="Right" Width="75" Click="btnSearch_Click" />
                <Button x:Name="btnClose" Content="Close" Margin="0,0,90,10" VerticalAlignment="Bottom"
                        HorizontalAlignment="Right" Width="75" />

            </Grid>
        </TabItem>
        <TabItem Header="Player Stats" x:Name="tabPlayerStats">
            <Grid>
                <DataGrid LoadingRow="dg_LoadingRow" RowHeaderWidth="25" AutoGenerateColumns="False"
                          CanUserAddRows="True" CanUserDeleteRows="True" HorizontalAlignment="Stretch" Margin="6,6,6,0"
                          Name="dgvPlayerStats"
                          VerticalAlignment="Stretch" FrozenColumnCount="2" AlternatingRowBackground="#FFE5E5E5"
                          IsReadOnly="True"
                          Sorting="dgvPlayerStats_Sorting">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                        <DataGridTextColumn Binding="{Binding FirstName}" Header="First Name" />
                        <DataGridTextColumn Binding="{Binding TeamF}" Header="Team" />
                        <DataGridTextColumn Binding="{Binding Position1}" Header="Position" />
                        <DataGridTextColumn Binding="{Binding Position2}" Header="2nd Position" />
                        <DataGridTextColumn Binding="{Binding GP}" Header="GP" />
                        <DataGridTextColumn Binding="{Binding GS}" Header="GS" />
                        <DataGridTextColumn Binding="{Binding MPG, StringFormat=F1}" Header="MPG" />
                        <DataGridTextColumn Binding="{Binding PPG, StringFormat=F1}" Header="PPG" />
                        <DataGridTextColumn Binding="{Binding FGMPG, StringFormat=F1}" Header="FGM/G" />
                        <DataGridTextColumn Binding="{Binding FGAPG, StringFormat=F1}" Header="FGA/G" />
                        <DataGridTextColumn Binding="{Binding FGp, StringFormat=F3}" Header="FG%" />
                        <DataGridTextColumn Binding="{Binding FGeff, StringFormat=F2}" Header="FGeff" />
                        <DataGridTextColumn Binding="{Binding TPMPG, StringFormat=F1}" Header="3PM/G" />
                        <DataGridTextColumn Binding="{Binding TPAPG, StringFormat=F1}" Header="3PA/G" />
                        <DataGridTextColumn Binding="{Binding TPp, StringFormat=F3}" Header="3P%" />
                        <DataGridTextColumn Binding="{Binding TPeff, StringFormat=F2}" Header="3Peff" />
                        <DataGridTextColumn Binding="{Binding FTMPG, StringFormat=F1}" Header="FTM/G" />
                        <DataGridTextColumn Binding="{Binding FTAPG, StringFormat=F1}" Header="FTA/G" />
                        <DataGridTextColumn Binding="{Binding FTp, StringFormat=F3}" Header="FT%" />
                        <DataGridTextColumn Binding="{Binding FTeff, StringFormat=F2}" Header="FTeff" />
                        <DataGridTextColumn Binding="{Binding RPG, StringFormat=F1}" Header="RPG" />
                        <DataGridTextColumn Binding="{Binding ORPG, StringFormat=F1}" Header="ORPG" />
                        <DataGridTextColumn Binding="{Binding DRPG, StringFormat=F1}" Header="DRPG" />
                        <DataGridTextColumn Binding="{Binding SPG, StringFormat=F1}" Header="SPG" />
                        <DataGridTextColumn Binding="{Binding BPG, StringFormat=F1}" Header="BPG" />
                        <DataGridTextColumn Binding="{Binding TPG, StringFormat=F1}" Header="TPG" />
                        <DataGridTextColumn Binding="{Binding APG, StringFormat=F1}" Header="APG" />
                        <DataGridTextColumn Binding="{Binding FPG, StringFormat=F1}" Header="FPG" />
                        <DataGridTextColumn Binding="{Binding MINS}" Header="MINS" />
                        <DataGridTextColumn Binding="{Binding PTS}" Header="PTS" />
                        <DataGridTextColumn Binding="{Binding FGM}" Header="FGM" />
                        <DataGridTextColumn Binding="{Binding FGA}" Header="FGA" />
                        <DataGridTextColumn Binding="{Binding TPM}" Header="3PM" />
                        <DataGridTextColumn Binding="{Binding TPA}" Header="3PA" />
                        <DataGridTextColumn Binding="{Binding FTM}" Header="FTM" />
                        <DataGridTextColumn Binding="{Binding FTA}" Header="FTA" />
                        <DataGridTextColumn Binding="{Binding REB}" Header="REB" />
                        <DataGridTextColumn Binding="{Binding OREB}" Header="OREB" />
                        <DataGridTextColumn Binding="{Binding DREB}" Header="DREB" />
                        <DataGridTextColumn Binding="{Binding STL}" Header="STL" />
                        <DataGridTextColumn Binding="{Binding TOS}" Header="TO" />
                        <DataGridTextColumn Binding="{Binding BLK}" Header="BLK" />
                        <DataGridTextColumn Binding="{Binding AST}" Header="AST" />
                        <DataGridTextColumn Binding="{Binding FOUL}" Header="FOUL" />
                        <DataGridTemplateColumn Header="PTSR" SortMemberPath="PTSR"
                                                ClipboardContentBinding="{Binding PTSR}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PTSR, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Scoring Rate; an estimate of points scored every 36 minutes on the floor."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="REBR" SortMemberPath="REBR"
                                                ClipboardContentBinding="{Binding REBR}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding REBR, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Rebounding Rate; an estimate of rebounds grabbed every 36 minutes on the floor."
                                                TextWrapping="Wrap"
                                                MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="OREBR" SortMemberPath="OREBR"
                                                ClipboardContentBinding="{Binding OREBR}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OREBR, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Offensive Rebounding Rate; an estimate of offensive rebounds grabbed every 36 minutes on the floor."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="ASTR" SortMemberPath="ASTR"
                                                ClipboardContentBinding="{Binding ASTR}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ASTR, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Assist Rate; an estimate of assists made every 36 minutes on the floor."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="BLKR" SortMemberPath="BLKR"
                                                ClipboardContentBinding="{Binding BLKR}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding BLKR, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Blocking Rate; an estimate of shots blocked every 36 minutes on the floor."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="STLR" SortMemberPath="STLR"
                                                ClipboardContentBinding="{Binding STLR}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding STLR, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Stealing Rate; an estimate of steals every 36 minutes on the floor."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="TOR" SortMemberPath="TOR"
                                                ClipboardContentBinding="{Binding TOR}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TOR, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Turnover Rate; an estimate of turnovers every 36 minutes on the floor."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="FTR" SortMemberPath="FTR"
                                                ClipboardContentBinding="{Binding FTR}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding FTR, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Free Throw Rate; a measure of a player's ability to get to the line and score."
                                                TextWrapping="Wrap"
                                                MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Binding="{Binding ID}" Header="ID" IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        <TabItem Header="Team Stats" x:Name="tabTeamStats">
            <Grid>
                <DataGrid LoadingRow="dg_LoadingRow" RowHeaderWidth="25" AutoGenerateColumns="False"
                          CanUserAddRows="True" CanUserDeleteRows="True" HorizontalAlignment="Stretch" Margin="6,6,6,0"
                          Name="dgvTeamStats"
                          VerticalAlignment="Stretch" FrozenColumnCount="2" AlternatingRowBackground="#FFE5E5E5"
                          IsReadOnly="True" Sorting="dgvTeamStats_Sorting">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding DisplayName}" Header="Team" />
                        <DataGridTextColumn Binding="{Binding Wins}" Header="W" />
                        <DataGridTextColumn Binding="{Binding Losses}" Header="L" />
                        <DataGridTextColumn Binding="{Binding PPG, StringFormat=F1}" Header="PPG" />
                        <DataGridTextColumn Binding="{Binding PAPG, StringFormat=F1}" Header="PAPG" />
                        <DataGridTextColumn Binding="{Binding FGMPG, StringFormat=F1}" Header="FGM/G" />
                        <DataGridTextColumn Binding="{Binding FGAPG, StringFormat=F1}" Header="FGA/G" />
                        <DataGridTextColumn Binding="{Binding FGp, StringFormat=F3}" Header="FG%" />
                        <DataGridTextColumn Binding="{Binding FGeff, StringFormat=F2}" Header="FGeff" />
                        <DataGridTextColumn Binding="{Binding TPMPG, StringFormat=F1}" Header="3PM/G" />
                        <DataGridTextColumn Binding="{Binding TPAPG, StringFormat=F1}" Header="3PA/G" />
                        <DataGridTextColumn Binding="{Binding TPp, StringFormat=F3}" Header="3P%" />
                        <DataGridTextColumn Binding="{Binding TPeff, StringFormat=F2}" Header="3Peff" />
                        <DataGridTextColumn Binding="{Binding FTMPG, StringFormat=F1}" Header="FTM/G" />
                        <DataGridTextColumn Binding="{Binding FTAPG, StringFormat=F1}" Header="FTA/G" />
                        <DataGridTextColumn Binding="{Binding FTp, StringFormat=F3}" Header="FT%" />
                        <DataGridTextColumn Binding="{Binding FTeff, StringFormat=F2}" Header="FTeff" />
                        <DataGridTextColumn Binding="{Binding RPG, StringFormat=F1}" Header="RPG" />
                        <DataGridTextColumn Binding="{Binding ORPG, StringFormat=F1}" Header="ORPG" />
                        <DataGridTextColumn Binding="{Binding DRPG, StringFormat=F1}" Header="DRPG" />
                        <DataGridTextColumn Binding="{Binding SPG, StringFormat=F1}" Header="SPG" />
                        <DataGridTextColumn Binding="{Binding BPG, StringFormat=F1}" Header="BPG" />
                        <DataGridTextColumn Binding="{Binding TPG, StringFormat=F1}" Header="TPG" />
                        <DataGridTextColumn Binding="{Binding APG, StringFormat=F1}" Header="APG" />
                        <DataGridTextColumn Binding="{Binding FPG, StringFormat=F1}" Header="FPG" />
                        <DataGridTextColumn Binding="{Binding MINS}" Header="MINS" />
                        <DataGridTextColumn Binding="{Binding PF}" Header="PF" />
                        <DataGridTextColumn Binding="{Binding PA}" Header="PA" />
                        <DataGridTextColumn Binding="{Binding FGM}" Header="FGM" />
                        <DataGridTextColumn Binding="{Binding FGA}" Header="FGA" />
                        <DataGridTextColumn Binding="{Binding TPM}" Header="3PM" />
                        <DataGridTextColumn Binding="{Binding TPA}" Header="3PA" />
                        <DataGridTextColumn Binding="{Binding FTM}" Header="FTM" />
                        <DataGridTextColumn Binding="{Binding FTA}" Header="FTA" />
                        <DataGridTextColumn Binding="{Binding REB}" Header="REB" />
                        <DataGridTextColumn Binding="{Binding OREB}" Header="OREB" />
                        <DataGridTextColumn Binding="{Binding DREB}" Header="DREB" />
                        <DataGridTextColumn Binding="{Binding STL}" Header="STL" />
                        <DataGridTextColumn Binding="{Binding TOS}" Header="TO" />
                        <DataGridTextColumn Binding="{Binding BLK}" Header="BLK" />
                        <DataGridTextColumn Binding="{Binding AST}" Header="AST" />
                        <DataGridTextColumn Binding="{Binding FOUL}" Header="FOUL" />
                        <DataGridTemplateColumn Header="ORTG" SortMemberPath="ORTG"
                                                ClipboardContentBinding="{Binding ORTG}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ORTG, StringFormat=F2}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Offensive Rating: A measure of points scored per 100 possessions."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="DRTG" SortMemberPath="DRTG"
                                                ClipboardContentBinding="{Binding DRTG}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DRTG, StringFormat=F2}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Defensive Rating: A measure of points allowed per 100 possessions (smaller is better)."
                                                TextWrapping="Wrap"
                                                MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="EFFd" SortMemberPath="EFFd"
                                                ClipboardContentBinding="{Binding EFFd}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding EFFd, StringFormat=F2}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Efficiency Differential: A comparison between the team's offensive and defensive ratings."
                                                TextWrapping="Wrap"
                                                MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="PW%" SortMemberPath="PWp"
                                                ClipboardContentBinding="{Binding PWp}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PWp, StringFormat=F3}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Projected Winning Percentage: A projection of the winning percentage at the end of the season, based on points for and allowed."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="PythW" SortMemberPath="PythW"
                                                ClipboardContentBinding="{Binding PythW}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PythW, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Pythagoeran Wins: Projected wins based on points scored and allowed."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="PythL" SortMemberPath="PythL"
                                                ClipboardContentBinding="{Binding PythL}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding PythL, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Pythagoeran Losses: Projected losses based on points scored and allowed."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="TS%" SortMemberPath="TSp"
                                                ClipboardContentBinding="{Binding TSp}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TSp, StringFormat=F3}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="True Shooting Percentage; a measure of shooting effeciency that takes into account 2-point field goals, 3-point field goals, and free throws."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="EFG%" SortMemberPath="EFGp"
                                                ClipboardContentBinding="{Binding EFGp}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding EFGp, StringFormat=F3}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Effective Field Goal Percentage; this metric adjusts for the fact that a 3-point field goal is worth one more point than a 2-point field goal."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="3PR" SortMemberPath="TPR"
                                                ClipboardContentBinding="{Binding TPR}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding TPR, StringFormat=F3}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="3-Point Rate: The percentage of a team's field goal attempts that are 3-point attempts."
                                                TextWrapping="Wrap"
                                                MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="OREB%" SortMemberPath="OREBp"
                                                ClipboardContentBinding="{Binding OREBp}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OREBp, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Offensive Rebound Percentage; an estimate of the percentage of available offensive rebounds a team grabbed."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="DREB%" SortMemberPath="DREBp"
                                                ClipboardContentBinding="{Binding DREBp}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DREBp, StringFormat=F1}">
                                        <TextBlock.ToolTip>
                                            <TextBlock
                                                Text="Defensive Rebound Percentage; an estimate of the percentage of available defensive rebounds a team grabbed."
                                                TextWrapping="Wrap" MaxWidth="400" />
                                        </TextBlock.ToolTip>
                                    </TextBlock>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="AST%" SortMemberPath="AST%"
                                                ClipboardContentBinding="{Binding ASTp}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ASTp, StringFormat=F1}">
                                        <TextBlock.ToolTip>

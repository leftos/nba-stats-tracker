<Window x:Class="NBA_Stats_Tracker.Windows.InputBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="NBA Stats Tracker" Height="169" MinWidth="200"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" SizeToContent="Width">
    <Grid>
        <TextBlock Height="43" Margin="15,12,15,0" Name="lblMessage"
               VerticalAlignment="Top" Padding="0,5,0,0" TextWrapping="Wrap" >
            Hello<LineBreak />my dearest!
        </TextBlock>
        <TextBox Height="23" Margin="15,60,15,0" Name="txtInput" VerticalAlignment="Top" />
        <Button Content="OK" Height="23" Margin="0,0,90,10" Name="btnOK" VerticalAlignment="Bottom" Click="btnOK_Click"
                IsDefault="True" HorizontalAlignment="Right" Width="75" />
        <Button Content="Cancel" Height="23" IsDefault="False" Margin="0,0,10,10" Name="btnCancel"
                VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="btnCancel_Click" />
    </Grid>
</Window>
<Window x:Class="NBA_Stats_Tracker.Windows.MainInterface.Players.PlayerOverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sw="clr-namespace:Swordfish.WPF.Charts;assembly=Swordfish.WPF.Charts"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:players="clr-namespace:NBA_Stats_Tracker.Data.Players"
        mc:Ignorable="d"
        Height="557" MinHeight="557" Width="791" MinWidth="791"
        Title="Player Overview" WindowStartupLocation="CenterScreen"
        Closing="window_Closing">
    <Window.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <StackPanel Background="Black">
                            <TextBlock Text="" />
                            <ItemsPresenter />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid Margin="0,39,0,193">
            <TabControl HorizontalAlignment="Stretch" x:Name="tbcPlayerOverview"
                        VerticalAlignment="Stretch">
                <TabItem Header="Overview" x:Name="tabOverview"
                         d:DataContext="{d:DesignInstance players:PlayerStatsRow}">
                    <Grid x:Name="grdOverview">
                        <Label Margin="6,6,0,0" Content="Last Name" HorizontalAlignment="Left" x:Name="label3"
                               VerticalAlignment="Top" />
                        <TextBox Height="23" Margin="73,8,0,0" Width="120" HorizontalAlignment="Left"
                                 x:Name="txtLastName"
                                 Text="{Binding LastName}" VerticalAlignment="Top" />
                        <Label Margin="223,6,0,0" Content="First Name" HorizontalAlignment="Left" x:Name="label4"
                               VerticalAlignment="Top" />
                        <TextBox Height="23" Margin="290,8,0,0" Width="120" HorizontalAlignment="Left"
                                 x:Name="txtFirstName"
                                 Text="{Binding FirstName}" VerticalAlignment="Top" />
                        <TextBlock Margin="0,11,8,0" HorizontalAlignment="Right" x:Name="txbID" Text="{Binding ID}"
                                   TextAlignment="Right" VerticalAlignment="Top" Visibility="Hidden" />
                        <CheckBox Height="16" Margin="6,44,0,0" Content="Injured" HorizontalAlignment="Left"
                                  IsChecked="{Binding IsInjured, Mode=OneWay}"
                                  ToolTip="{Binding InjuryStatus, Mode=OneWay}" x:Name="chkIsInjured"
                                  VerticalAlignment="Top" Click="chkIsInjured_Click" />
                        <CheckBox Height="16" Margin="0,44,6,0" Content="Active" HorizontalAlignment="Right"
                                  x:Name="chkIsActive" VerticalAlignment="Top" />
                        <CheckBox Height="16" Margin="73,44,0,0" Content="All-Star" HorizontalAlignment="Left"
                                  IsChecked="{Binding IsAllStar}" x:Name="chkIsAllStar" VerticalAlignment="Top" />
                        <CheckBox Height="16" Margin="143,44,0,0" Content="Champion" HorizontalAlignment="Left"
                                  IsChecked="{Binding IsNBAChampion}" x:Name="chkIsNBAChampion" VerticalAlignment="Top" />
                        <DataGrid Margin="0,66,0,0" Style="{StaticResource DataGridStyle}" AutoGenerateColumns="True"
                                  FrozenColumnCount="1" ItemsSource="{Binding .}" x:Name="dgvOverviewStats"
                                  PreviewKeyDown="dgvOverviewStats_PreviewKeyDown" CanUserSortColumns="False" />
                        <ComboBox Height="23" Margin="0,8,145,0" Width="40" HorizontalAlignment="Right"
                                  x:Name="cmbPosition1"
                                  VerticalAlignment="Top" />
                        <Label Margin="0,8,188,0" Content="Position" HorizontalAlignment="Right" x:Name="label5"
                               VerticalAlignment="Top" />
                        <ComboBox Height="23" Margin="0,8,21,0" Width="40" HorizontalAlignment="Right"
                                  x:Name="cmbPosition2"
                                  VerticalAlignment="Top" />
                        <Label Margin="0,8,61,0" Content="2nd Position" HorizontalAlignment="Right" x:Name="label6"
                               VerticalAlignment="Top" />
                        <Label Margin="0,36,228,0" Content="Year of Birth" HorizontalAlignment="Right"
                               VerticalAlignment="Top" />
                        <TextBox Height="23" Margin="0,38,188,0" Width="35" HorizontalAlignment="Right"
                                 x:Name="txtYearOfBirth"
                                 Text="{Binding YearOfBirth}" VerticalAlignment="Top" />
                        <Label Margin="0,36,117,0" Content="Years Pro" HorizontalAlignment="Right"
                               VerticalAlignment="Top" />
                        <TextBox Height="23" Margin="0,38,74,0" Width="35" HorizontalAlignment="Right"
                                 x:Name="txtYearsPro"
                                 Text="{Binding YearsPro}" VerticalAlignment="Top" />
                        <Label Margin="0,36,467,0" Content="Height" HorizontalAlignment="Right"
                               VerticalAlignment="Top" />
                        <TextBox Height="23" Margin="0,37,413,0" Width="49" HorizontalAlignment="Right"
                                 x:Name="txtHeight"
                                 Text="{Binding DisplayHeight}" VerticalAlignment="Top" />
                        <Label Margin="0,36,360,0" Content="Weight" HorizontalAlignment="Right"
                               VerticalAlignment="Top" />
                        <TextBox Height="23" Margin="0,37,308,0" Width="47" HorizontalAlignment="Right"
                                 x:Name="txtWeight"
                                 Text="{Binding DisplayWeight}" VerticalAlignment="Top" />
                    </Grid>
                </TabItem>
                <TabItem Header="Split Stats" x:Name="tabSplitStats">
                    <Grid>
                        <DataGrid Margin="0" Style="{StaticResource DataGridStyle}" AutoGenerateColumns="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False" FrozenColumnCount="1"
                                  HorizontalAlignment="Stretch"
                                  x:Name="dgvSplitStats" VerticalAlignment="Stretch" IsReadOnly="True"
                                  d:DataContext="{d:DesignInstance players:PlayerStatsRow}">
                            <DataGrid.GroupStyle>
                                <GroupStyle ContainerStyle="{StaticResource GroupHeaderStyle}">
                                    <GroupStyle.Panel>
                                        <ItemsPanelTemplate>
                                            <DataGridRowsPresenter />
                                        </ItemsPanelTemplate>
                                    </GroupStyle.Panel>
                                </GroupStyle>
                            </DataGrid.GroupStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding Type}" Header="Type" />
                                <DataGridTextColumn Binding="{Binding GP}" Header="GP" />
                                <DataGridTextColumn Binding="{Binding GS}" Header="GS" />
                                <DataGridTextColumn Binding="{Binding MPG, StringFormat=F1}" Header="MPG" />
                                <DataGridTextColumn Binding="{Binding PPG, StringFormat=F1}" Header="PPG" />
                                <DataGridTextColumn Binding="{Binding FGp, StringFormat=F3}" Header="FG%" />
                                <DataGridTextColumn Binding="{Binding FGeff, StringFormat=F2}" Header="FGeff" />
                                <DataGridTextColumn Binding="{Binding TPp, StringFormat=F3}" Header="3P%" />
                                <DataGridTextColumn Binding="{Binding TPeff, StringFormat=F2}" Header="3Peff" />
                                <DataGridTextColumn Binding="{Binding FTp, StringFormat=F3}" Header="FT%" />
                                <DataGridTextColumn Binding="{Binding FTeff, StringFormat=F2}" Header="FTeff" />
                                <DataGridTextColumn Binding="{Binding RPG, StringFormat=F1}" Header="RPG" />
                                <DataGridTextColumn Binding="{Binding ORPG, StringFormat=F1}" Header="ORPG" />
                                <DataGridTextColumn Binding="{Binding DRPG, StringFormat=F1}" Header="DRPG" />
                                <DataGridTextColumn Binding="{Binding SPG, StringFormat=F1}" Header="SPG" />
                                <DataGridTextColumn Binding="{Binding BPG, StringFormat=F1}" Header="BPG" />
                                <DataGridTextColumn Binding="{Binding TPG, StringFormat=F1}" Header="TPG" />
                                <DataGridTextColumn Binding="{Binding APG, StringFormat=F1}" Header="APG" />
                                <DataGridTextColumn Binding="{Binding FPG, StringFormat=F1}" Header="FPG" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Advanced Stats">
                    <ScrollViewer>
                        <StackPanel>
                            <GroupBox Header="Metric Stats" Padding="2,5" Grid.Row="0">
                                <DataGrid Name="dgMetrics" Style="{StaticResource DataGridStyle}"
                                          AutoGenerateColumns="False" Height="70"
                                          IsReadOnly="True" d:DataContext="{d:DesignInstance players:PlayerStatsRow}">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="PER" x:Name="dgvMetricStatsPERColumn"
                                                                SortMemberPath="PER"
                                                                ClipboardContentBinding="{Binding PER}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding PER, StringFormat=F2}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Player Efficiency Rating; in the words of its creator, ESPN.com columnist John Hollinger, 'the PER sums up all a player's positive accomplishments, subtracts the negative accomplishments, and returns a per-minute rating of a player's performance.'"
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="EFF" x:Name="dgvMetricStatsEFFColumn"
                                                                SortMemberPath="EFF"
                                                                ClipboardContentBinding="{Binding EFF}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding EFF, StringFormat=F2}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Efficiency; an all-around measure of every aspect of the player's performance compared to the rest of the league."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="GmSc" SortMemberPath="GmSc"
                                                                ClipboardContentBinding="{Binding GmSc}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding GmSc, StringFormat=F2}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Game Score; a linear calculation of the player's performance."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="GmScE" SortMemberPath="GmScE"
                                                                ClipboardContentBinding="{Binding GmScE}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding GmScE, StringFormat=F2}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Game Score Efficiency; a linear calculation of the player's performance, adjusted to their minutes on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="TS%" SortMemberPath="TSp"
                                                                ClipboardContentBinding="{Binding TSp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding TSp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="True Shooting Percentage; a measure of shooting effeciency that takes into account 2-point field goals, 3-point field goals, and free throws."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="EFG%" SortMemberPath="EFGp"
                                                                ClipboardContentBinding="{Binding EFGp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding EFGp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Effective Field Goal Percentage; this statistic adjusts for the fact that a 3-point field goal is worth one more point than a 2-point field goal."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="PPR" SortMemberPath="PPR"
                                                                ClipboardContentBinding="{Binding PPR}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding PPR, StringFormat=F1}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Pure Point Rating; a John Hollinger created metric, measure of a player's ball-handling ability that takes productivity, team and league pace into account. Each assist is worth 2/3 of what each turnover takes away from the rating."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="OREB%" SortMemberPath="OREBp"
                                                                ClipboardContentBinding="{Binding OREBp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding OREBp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Offensive Rebound Percentage; an estimate of the percentage of available offensive rebounds a player grabbed while he was on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="DREB%" SortMemberPath="DREBp"
                                                                ClipboardContentBinding="{Binding DREBp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DREBp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Defensive Rebound Percentage; an estimate of the percentage of available defensive rebounds a player grabbed while he was on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="REB%" SortMemberPath="REBp"
                                                                ClipboardContentBinding="{Binding REBp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding REBp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Total Rebound Percentage; an estimate of the percentage of available rebounds a player grabbed while he was on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="AST%" SortMemberPath="ASTp"
                                                                ClipboardContentBinding="{Binding ASTp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ASTp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Assist Percentage; an estimate of the percentage of teammate field goals a player assisted while he was on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="STL%" SortMemberPath="STLp"
                                                                ClipboardContentBinding="{Binding STLp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding STLp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Steal Percentage; an estimate of the percentage of opponent possessions that end with a steal by the player while he was on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="BLK%" SortMemberPath="BLKp"
                                                                ClipboardContentBinding="{Binding BLKp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding BLKp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Block Percentage; an estimate of the percentage of opponent two-point field goal attempts blocked by the player while he was on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="TO%" SortMemberPath="TOp"
                                                                ClipboardContentBinding="{Binding TOp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding TOp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Turnover Percentage; an estimate of turnovers per 100 plays."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="USG%" SortMemberPath="USGp"
                                                                ClipboardContentBinding="{Binding USGp}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding USGp, StringFormat=F3}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Usage Percentage; an estimate of the percentage of team plays used by a player while he was on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="PTSR" SortMemberPath="PTSR"
                                                                ClipboardContentBinding="{Binding PTSR}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding PTSR, StringFormat=F1}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Scoring Rate; an estimate of points scored every 36 minutes on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="REBR" SortMemberPath="REBR"
                                                                ClipboardContentBinding="{Binding REBR}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding REBR, StringFormat=F1}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Rebounding Rate; an estimate of rebounds grabbed every 36 minutes on the floor."
                                                                TextWrapping="Wrap"
                                                                MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="OREBR" SortMemberPath="OREBR"
                                                                ClipboardContentBinding="{Binding OREBR}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding OREBR, StringFormat=F1}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Offensive Rebounding Rate; an estimate of offensive rebounds grabbed every 36 minutes on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="ASTR" SortMemberPath="ASTR"
                                                                ClipboardContentBinding="{Binding ASTR}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding ASTR, StringFormat=F1}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Assist Rate; an estimate of assists made every 36 minutes on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="BLKR" SortMemberPath="BLKR"
                                                                ClipboardContentBinding="{Binding BLKR}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding BLKR, StringFormat=F1}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Blocking Rate; an estimate of shots blocked every 36 minutes on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="STLR" SortMemberPath="STLR"
                                                                ClipboardContentBinding="{Binding STLR}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding STLR, StringFormat=F1}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Stealing Rate; an estimate of steals every 36 minutes on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="TOR" SortMemberPath="TOR"
                                                                ClipboardContentBinding="{Binding TOR}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding TOR, StringFormat=F1}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Turnover Rate; an estimate of turnovers every 36 minutes on the floor."
                                                                TextWrapping="Wrap" MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="FTR" SortMemberPath="FTR"
                                                                ClipboardContentBinding="{Binding FTR}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding FTR, StringFormat=F1}">
                                                        <TextBlock.ToolTip>
                                                            <TextBlock
                                                                Text="Free Throw Rate; a measure of a player's ability to get to the line and score."
                                                                TextWrapping="Wrap"
                                                                MaxWidth="400" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </GroupBox>
                            <GroupBox Header="Shooting Stats" Padding="2,5" Grid.Row="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="27" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel Height="23" Orientation="Horizontal">
                                        <TextBlock Text="Origin" VerticalAlignment="Center" />
                                        <Rectangle Width="5" />
                                        <ComboBox Name="cmbShotOrigin" Width="120"
                                                  SelectionChanged="cmbShotOrigin_SelectionChanged" />
                                        <Rectangle Width="10" />
                                        <TextBlock Text="Type" VerticalAlignment="Center" />
                                        <Rectangle Width="5" />
                                        <ComboBox Name="cmbShotType" Width="120"
                                                  SelectionChanged="cmbShotType_SelectionChanged" />
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Right">
                                        <Button Name="btnShotChart" Content="Shot Chart" Width="92"
                                                Click="btnShotChart_Click" />
                                    </StackPanel>
                                    <DataGrid Name="dgShooting" Grid.Row="1" Margin="0,2" FrozenColumnCount="1"
                                              CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True"
                                              AutoGenerateColumns="False" Height="170"
                                              d:DataContext="{d:DesignInstance players:PlayerPBPStats}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Distance" Binding="{Binding Description}" />
                                            <DataGridTextColumn Header="FGM" Binding="{Binding FGM}" />
                                            <DataGridTextColumn Header="FGA" Binding="{Binding FGA}" />
                                            <DataGridTextColumn Header="FG%" Binding="{Binding FGp, StringFormat=F3}" />
                                            <DataGridTextColumn Header="FGeff"
                                                                Binding="{Binding FGeff, StringFormat=F2}" />
                                            <DataGridTextColumn Header="Asst" Binding="{Binding Assisted}" />
                                            <DataGridTextColumn Header="Asst%"
                                                                Binding="{Binding Assistedp, StringFormat=F3}" />
                                            <DataGridTextColumn Header="Defensive" />
                                            <DataGridTextColumn Header="FGM" Binding="{Binding DefFGM}" />
                                            <DataGridTextColumn Header="FGA" Binding="{Binding DefFGA}" />
                                            <DataGridTextColumn Header="FG%"
                                                                Binding="{Binding DefFGp, StringFormat=F3}" />
                                            <DataGridTextColumn Header="FGeff"
                                                                Binding="{Binding DefFGeff, StringFormat=F2}" />
                                            <DataGridTextColumn Header="Asst" Binding="{Binding DefAssisted}" />
                                            <DataGridTextColumn Header="Asst%"
                                                                Binding="{Binding DefAssistedp, StringFormat=F3}" />
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Grid>
                            </GroupBox>
                            <GroupBox Header="Other Stats" Padding="2,5" Grid.Row="0">
                                <DataGrid Name="dgOther" Style="{StaticResource DataGridStyle}"
                                          AutoGenerateColumns="False" Height="70"
                                          IsReadOnly="True" d:DataContext="{d:DesignInstance players:PlayerPBPStats}">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="GP (BS)" SortMemberPath="GP"
                                                                ClipboardContentBinding="{Binding GP}">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding GP}">

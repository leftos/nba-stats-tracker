<Window x:Class="NBA_Stats_Tracker.Windows.TeamOverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Team Overview" Height="598" Width="698"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded"
        Icon="/NBA%20Stats%20Tracker;component/NBA%202K12.ico"
        MinWidth="698" Closing="Window_Closing">
    <Grid>
        <TabControl Margin="0,41,0,188" Name="tbcTeamOverview" Padding="0">
            <TabItem Header="Overview" Name="tabOverview">
                <Grid VerticalAlignment="Stretch">
                    <DataGrid AutoGenerateColumns="True" HorizontalAlignment="Stretch" Margin="6,6,6,0"
                              Name="dgvTeamStats" VerticalAlignment="Stretch" ItemsSource="{Binding Path=.}"
                              CanUserSortColumns="False"
                              AlternatingRowBackground="#FFE5E5E5" FrozenColumnCount="1"
                              PreviewKeyDown="dgvTeamStats_PreviewKeyDown">
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Split Stats" Name="tabSplitStats">
                <Grid>
                    <DataGrid AutoGenerateColumns="True" HorizontalAlignment="Stretch" Margin="6,6,6,0"
                              ItemsSource="{Binding Path=.}" Name="dgvSplit" VerticalAlignment="Stretch"
                              AlternatingRowBackground="#FFE5E5E5"
                              FrozenColumnCount="1" IsReadOnly="True" />
                </Grid>
            </TabItem>
            <TabItem Header="Roster" Name="tabTeamRoster">
                <Grid VerticalAlignment="Stretch">
                    <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Stretch" Margin="6,6,6,0"
                              Name="dgvTeamRoster" VerticalAlignment="Stretch"
                              MouseDoubleClick="AnyPlayerDataGrid_MouseDoubleClick"
                              FrozenColumnCount="2" AlternatingRowBackground="#FFE5E5E5" Sorting="StatColumn_Sorting">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                            <DataGridTextColumn Binding="{Binding FirstName}" Header="First Name" />
                            <DataGridTextColumn Binding="{Binding Position1}" Header="Position" />
                            <DataGridTextColumn Binding="{Binding Position2}" Header="2nd Position" />
                            <DataGridCheckBoxColumn Binding="{Binding IsInjured}" Header="Injured" />
                            <DataGridTextColumn Binding="{Binding YearsPro}" Header="Years Pro" />
                            <DataGridTextColumn Binding="{Binding YearOfBirth}" Header="Year of Birth" />
                            <DataGridTextColumn Binding="{Binding ID}" Header="ID" IsReadOnly="True"
                                                Visibility="Collapsed" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Player Stats" Name="tabPlayerStats">
                <Grid VerticalAlignment="Stretch">
                    <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Stretch" Margin="6,6,6,0"
                              Name="dgvPlayerStats" VerticalAlignment="Stretch"
                              MouseDoubleClick="AnyPlayerDataGrid_MouseDoubleClick"
                              FrozenColumnCount="2" AlternatingRowBackground="#FFE5E5E5" Sorting="StatColumn_Sorting"
                              PreviewKeyDown="AnyPlayerDataGrid_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                            <DataGridTextColumn Binding="{Binding FirstName}" Header="First Name" />
                            <DataGridTextColumn Binding="{Binding GP}" Header="GP" />
                            <DataGridTextColumn Binding="{Binding GS}" Header="GS" />
                            <DataGridTextColumn Binding="{Binding MPG, StringFormat=F1}" Header="MPG" />
                            <DataGridTextColumn Binding="{Binding PPG, StringFormat=F1}" Header="PPG" />
                            <DataGridTextColumn Binding="{Binding FGMPG, StringFormat=F1}" Header="FGM/G" />
                            <DataGridTextColumn Binding="{Binding FGAPG, StringFormat=F1}" Header="FGA/G" />
                            <DataGridTextColumn Binding="{Binding FGp, StringFormat=F3}" Header="FG%" />
                            <DataGridTextColumn Binding="{Binding FGeff, StringFormat=F2}" Header="FGeff" />
                            <DataGridTextColumn Binding="{Binding TPMPG, StringFormat=F1}" Header="3PM/G" />
                            <DataGridTextColumn Binding="{Binding TPAPG, StringFormat=F1}" Header="3PA/G" />
                            <DataGridTextColumn Binding="{Binding TPp, StringFormat=F3}" Header="3P%" />
                            <DataGridTextColumn Binding="{Binding TPeff, StringFormat=F2}" Header="3Peff" />
                            <DataGridTextColumn Binding="{Binding FTMPG, StringFormat=F1}" Header="FTM/G" />
                            <DataGridTextColumn Binding="{Binding FTAPG, StringFormat=F1}" Header="FTA/G" />
                            <DataGridTextColumn Binding="{Binding FTp, StringFormat=F3}" Header="FT%" />
                            <DataGridTextColumn Binding="{Binding FTeff, StringFormat=F2}" Header="FTeff" />
                            <DataGridTextColumn Binding="{Binding RPG, StringFormat=F1}" Header="RPG" />
                            <DataGridTextColumn Binding="{Binding ORPG, StringFormat=F1}" Header="ORPG" />
                            <DataGridTextColumn Binding="{Binding DRPG, StringFormat=F1}" Header="DRPG" />
                            <DataGridTextColumn Binding="{Binding APG, StringFormat=F1}" Header="APG" />
                            <DataGridTextColumn Binding="{Binding SPG, StringFormat=F1}" Header="SPG" />
                            <DataGridTextColumn Binding="{Binding BPG, StringFormat=F1}" Header="BPG" />
                            <DataGridTextColumn Binding="{Binding TPG, StringFormat=F1}" Header="TPG" />
                            <DataGridTextColumn Binding="{Binding FPG, StringFormat=F1}" Header="FPG" />
                            <DataGridTextColumn Binding="{Binding MINS}" Header="MINS" />
                            <DataGridTextColumn Binding="{Binding PTS}" Header="PTS" />
                            <DataGridTextColumn Binding="{Binding FGM}" Header="FGM" />
                            <DataGridTextColumn Binding="{Binding FGA}" Header="FGA" />
                            <DataGridTextColumn Binding="{Binding TPM}" Header="3PM" />
                            <DataGridTextColumn Binding="{Binding TPA}" Header="3PA" />
                            <DataGridTextColumn Binding="{Binding FTM}" Header="FTM" />
                            <DataGridTextColumn Binding="{Binding FTA}" Header="FTA" />
                            <DataGridTextColumn Binding="{Binding REB}" Header="REB" />
                            <DataGridTextColumn Binding="{Binding OREB}" Header="OREB" />
                            <DataGridTextColumn Binding="{Binding DREB}" Header="DREB" />
                            <DataGridTextColumn Binding="{Binding AST}" Header="AST" />
                            <DataGridTextColumn Binding="{Binding STL}" Header="STL" />
                            <DataGridTextColumn Binding="{Binding BLK}" Header="BLK" />
                            <DataGridTextColumn Binding="{Binding TOS}" Header="TO" />
                            <DataGridTextColumn Binding="{Binding FOUL}" Header="FOUL" />
                            <DataGridTextColumn Binding="{Binding ID}" Header="ID" IsReadOnly="True" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Metric Stats" Name="tabMetricStats">
                <Grid>
                    <DataGrid AlternatingRowBackground="#FFE5E5E5" AutoGenerateColumns="False" FrozenColumnCount="2"
                              HorizontalAlignment="Stretch" Margin="6,6,6,0" Name="dgvMetricStats"
                              VerticalAlignment="Stretch" IsReadOnly="True"
                              Sorting="StatColumn_Sorting" MouseDoubleClick="AnyPlayerDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                            <DataGridTextColumn Binding="{Binding FirstName}" Header="First Name" />
                            <DataGridTextColumn Binding="{Binding TeamF}" Header="Team" Visibility="Collapsed" />
                            <DataGridTemplateColumn Header="PER" x:Name="dgvMetricStatsPERColumn" SortMemberPath="PER"
                                                    ClipboardContentBinding="{Binding PER}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PER, StringFormat=F2}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Player Efficiency Rating; in the words of its creator, ESPN.com columnist John Hollinger, 'the PER sums up all a player's positive accomplishments, subtracts the negative accomplishments, and returns a per-minute rating of a player's performance.'"
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="EFF" x:Name="dgvMetricStatsEFFColumn" SortMemberPath="EFF"
                                                    ClipboardContentBinding="{Binding EFF}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding EFF, StringFormat=F2}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Efficiency; an all-around measure of every aspect of the player's performance compared to the rest of the league."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="GmSc" SortMemberPath="GmSc"
                                                    ClipboardContentBinding="{Binding GmSc}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GmSc, StringFormat=F2}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Game Score; a linear calculation of the player's performance."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="GmScE" SortMemberPath="GmScE"
                                                    ClipboardContentBinding="{Binding GmScE}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding GmScE, StringFormat=F2}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Game Score Efficiency; a linear calculation of the player's performance, adjusted to their minutes on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="TS%" SortMemberPath="TSp"
                                                    ClipboardContentBinding="{Binding TSp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TSp, StringFormat=F3}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="True Shooting Percentage; a measure of shooting effeciency that takes into account 2-point field goals, 3-point field goals, and free throws."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="EFG%" SortMemberPath="EFGp"
                                                    ClipboardContentBinding="{Binding EFGp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding EFGp, StringFormat=F3}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Effective Field Goal Percentage; this statistic adjusts for the fact that a 3-point field goal is worth one more point than a 2-point field goal."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="PPR" SortMemberPath="PPR" x:Name="dgvMetricStatsPPRColumn"
                                                    ClipboardContentBinding="{Binding PPR}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PPR, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Pure Point Rating; a John Hollinger created metric, measure of a player's ball-handling ability that takes productivity, team and league pace into account. Each assist is worth 2/3 of what each turnover takes away from the rating."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="OREB%" SortMemberPath="OREBp"
                                                    ClipboardContentBinding="{Binding OREBp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OREBp, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Offensive Rebound Percentage; an estimate of the percentage of available offensive rebounds a player grabbed while he was on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="DREB%" SortMemberPath="DREBp"
                                                    ClipboardContentBinding="{Binding DREBp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DREBp, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Defensive Rebound Percentage; an estimate of the percentage of available defensive rebounds a player grabbed while he was on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="REB%" SortMemberPath="REBp"
                                                    ClipboardContentBinding="{Binding REBp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding REBp, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Total Rebound Percentage; an estimate of the percentage of available rebounds a player grabbed while he was on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="AST%" SortMemberPath="ASTp"
                                                    ClipboardContentBinding="{Binding ASTp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ASTp, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Assist Percentage; an estimate of the percentage of teammate field goals a player assisted while he was on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="STL%" SortMemberPath="STLp"
                                                    ClipboardContentBinding="{Binding STLp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding STLp, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Steal Percentage; an estimate of the percentage of opponent possessions that end with a steal by the player while he was on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="BLK%" SortMemberPath="BLKp"
                                                    ClipboardContentBinding="{Binding BLKp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding BLKp, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Block Percentage; an estimate of the percentage of opponent two-point field goal attempts blocked by the player while he was on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="TO%" SortMemberPath="TOp"
                                                    ClipboardContentBinding="{Binding TOp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TOp, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Turnover Percentage; an estimate of turnovers per 100 plays."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="USG%" SortMemberPath="USGp"
                                                    ClipboardContentBinding="{Binding USGp}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding USGp, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Usage Percentage; an estimate of the percentage of team plays used by a player while he was on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="PTSR" SortMemberPath="PTSR"
                                                    ClipboardContentBinding="{Binding PTSR}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding PTSR, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Scoring Rate; an estimate of points scored every 36 minutes on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="REBR" SortMemberPath="REBR"
                                                    ClipboardContentBinding="{Binding REBR}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding REBR, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Rebounding Rate; an estimate of rebounds grabbed every 36 minutes on the floor."
                                                    TextWrapping="Wrap"
                                                    MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="OREBR" SortMemberPath="OREBR"
                                                    ClipboardContentBinding="{Binding OREBR}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding OREBR, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Offensive Rebounding Rate; an estimate of offensive rebounds grabbed every 36 minutes on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="ASTR" SortMemberPath="ASTR"
                                                    ClipboardContentBinding="{Binding ASTR}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ASTR, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Assist Rate; an estimate of assists made every 36 minutes on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="BLKR" SortMemberPath="BLKR"
                                                    ClipboardContentBinding="{Binding BLKR}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding BLKR, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Blocking Rate; an estimate of shots blocked every 36 minutes on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="STLR" SortMemberPath="STLR"
                                                    ClipboardContentBinding="{Binding STLR}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding STLR, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Stealing Rate; an estimate of steals every 36 minutes on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="TOR" SortMemberPath="TOR"
                                                    ClipboardContentBinding="{Binding TOR}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TOR, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Turnover Rate; an estimate of turnovers every 36 minutes on the floor."
                                                    TextWrapping="Wrap" MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="FTR" SortMemberPath="FTR"
                                                    ClipboardContentBinding="{Binding FTR}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FTR, StringFormat=F1}">
                                            <TextBlock.ToolTip>
                                                <TextBlock
                                                    Text="Free Throw Rate; a measure of a player's ability to get to the line and score."
                                                    TextWrapping="Wrap"
                                                    MaxWidth="400" />
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Player Playoff Stats" x:Name="tabPlayerPlayoffStats">
                <Grid VerticalAlignment="Stretch">
                    <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Stretch" Margin="6,6,6,0"
                              x:Name="dgvPlayerPlayoffStats" VerticalAlignment="Stretch"
                              MouseDoubleClick="AnyPlayerDataGrid_MouseDoubleClick"
                              FrozenColumnCount="2" AlternatingRowBackground="#FFE5E5E5" Sorting="StatColumn_Sorting"
                              PreviewKeyDown="AnyPlayerDataGrid_PreviewKeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding LastName}" Header="Last Name" />
                            <DataGridTextColumn Binding="{Binding FirstName}" Header="First Name" />
                            <DataGridTextColumn Binding="{Binding GP}" Header="GP" />
                            <DataGridTextColumn Binding="{Binding GS}" Header="GS" />
                            <DataGridTextColumn Binding="{Binding MPG, StringFormat=F1}" Header="MPG" />
                            <DataGridTextColumn Binding="{Binding PPG, StringFormat=F1}" Header="PPG" />

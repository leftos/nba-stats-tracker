<Window x:Class="NBA_Stats_Tracker.playerOverviewW" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="557" Width="698" Icon="/NBA%20Stats%20Tracker;component/NBA%202K12.ico" MinWidth="698" Title="Player Overview" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="GroupHeaderStyle" TargetType="{x:Type GroupItem}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type GroupItem}">
                        <StackPanel Background="Black">
                            <TextBlock Text="" />
                            <ItemsPresenter />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TabControl Margin="0,39,0,193" HorizontalAlignment="Stretch" Name="tbcPlayerOverview" VerticalAlignment="Stretch">
            <TabItem Header="Overview" Name="tabOverview">
                <Grid Name="grdOverview">
                    <Label Margin="6,6,0,0" Content="Last Name" HorizontalAlignment="Left" Name="label3" VerticalAlignment="Top" />
                    <TextBox Height="23" Margin="73,8,0,0" Width="120" HorizontalAlignment="Left" Name="txtLastName" Text="{Binding LastName}" VerticalAlignment="Top" />
                    <Label Margin="223,6,0,0" Content="First Name" HorizontalAlignment="Left" Name="label4" VerticalAlignment="Top" />
                    <TextBox Height="23" Margin="290,8,0,0" Width="120" HorizontalAlignment="Left" Name="txtFirstName" Text="{Binding FirstName}" VerticalAlignment="Top" />
                    <TextBlock Margin="0,11,8,0" HorizontalAlignment="Right" Name="txbID" Text="{Binding ID}" TextAlignment="Right" VerticalAlignment="Top" Visibility="Hidden" />
                    <CheckBox Height="16" Margin="6,44,0,0" Content="Injured" HorizontalAlignment="Left" IsChecked="{Binding isInjured}" Name="chkIsInjured" VerticalAlignment="Top" />
                    <CheckBox Height="16" Margin="0,44,6,0" Content="Active" HorizontalAlignment="Right" IsChecked="{Binding isActive}" Name="chkIsActive" VerticalAlignment="Top" />
                    <CheckBox Height="16" Margin="73,44,0,0" Content="All-Star" HorizontalAlignment="Left" IsChecked="{Binding isAllStar}" Name="chkIsAllStar" VerticalAlignment="Top" />
                    <CheckBox Height="16" Margin="143,44,0,0" Content="Champion" HorizontalAlignment="Left" IsChecked="{Binding isNBAChampion}" Name="chkIsNBAChampion" VerticalAlignment="Top" />
                    <DataGrid Margin="0,66,0,0" AlternatingRowBackground="#FFE5E5E5" AutoGenerateColumns="True" FrozenColumnCount="1" ItemsSource="{Binding Path=.}" Name="dgvOverviewStats" />
                    <ComboBox Height="23" Margin="495,8,0,0" Width="40" HorizontalAlignment="Left" Name="cmbPosition1" VerticalAlignment="Top" />
                    <Label Margin="439,8,0,0" Content="Position" HorizontalAlignment="Left" Name="label5" VerticalAlignment="Top" />
                    <ComboBox Height="23" Margin="619,8,0,0" Width="40" HorizontalAlignment="Left" Name="cmbPosition2" VerticalAlignment="Top" />
                    <Label Margin="544,8,0,0" Content="2nd Position" HorizontalAlignment="Left" Name="label6" VerticalAlignment="Top" />
                </Grid>
            </TabItem>
            <TabItem Header="Split Stats" Name="tabSplitStats">
